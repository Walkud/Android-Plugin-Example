<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pluginstudy.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/plugin_vertical_margin"
        android:paddingLeft="@dimen/plugin_horizontal_margin"
        android:paddingRight="@dimen/plugin_horizontal_margin"
        android:paddingTop="@dimen/plugin_vertical_margin">

        <Button
            android:id="@+id/button1"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="控件测试" />

        <Button
            android:id="@+id/button2"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service测试" />

        <Button
            android:id="@+id/button3"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BroadCast测试" />

        <Button
            android:id="@+id/button4"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="so库测试" />

        <Button
            android:id="@+id/button5"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据库测试" />

        <Button
            android:id="@+id/button6"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="资源测试" />

        <Button
            android:id="@+id/button7"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider测试" />

        <Button
            android:id="@+id/button8"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第三方库测试" />

        <Button
            android:id="@+id/button9"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SharedPreferences"
            android:visibility="visible" />

        <Button
            android:id="@+id/button10"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="待续"
            android:visibility="gone" />

        <Button
            android:id="@+id/button11"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="待续"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>